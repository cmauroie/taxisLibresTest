<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100sp"
    android:id="@+id/contenedorPelicula"
    >
<ImageView
    android:id="@+id/imagen_peli"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="0.25"
    android:scaleType="centerInside"
    />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titulo_pelicula"
            android:textSize="@dimen/texto_ubicaciones"
            android:gravity="center"
            android:textColor="@color/Black"
            android:fontFamily="cursive"
            android:layout_marginTop="@dimen/padding_text2"
            android:padding="@dimen/padding_text2"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/votos_pelicula"
            android:textSize="@dimen/texto_ubicaciones"
            android:gravity="center"
            android:textColor="@color/Black"
            android:fontFamily="cursive"
            android:padding="@dimen/padding_text2"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fecha_pelicula"
            android:textSize="@dimen/texto_ubicaciones"
            android:gravity="center"
            android:textColor="@color/Black"
            android:fontFamily="cursive"
            android:padding="@dimen/padding_text2"
            />
    </LinearLayout>
</LinearLayout>